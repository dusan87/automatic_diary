<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/ShadowText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="@string/label_registration_email"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text" />

            <EditText
                android:id="@+id/edt_registration_email"
                style="@style/SignInEditText"
                android:inputType="textAutoComplete"
                android:hint="@string/hint_email"
                android:layout_marginTop="5dp" />

            <TextView
                style="@style/ShadowText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="@string/label_registration_password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text" />

            <EditText
                android:id="@+id/edt_password"
                style="@style/SignInEditText"
                android:inputType="textPassword"
                android:hint="@string/hint_password"
                android:layout_marginTop="5dp" />

            <TextView
                style="@style/ShadowText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="@string/label_registration_repeat_password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text" />

            <EditText
                android:id="@+id/edt_repassword"
                style="@style/SignInEditText"
                android:inputType="textPassword"
                android:hint="@string/hint_repassword"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    style="@style/ShadowText"
                    android:id="@+id/btn_cancel_registration"
                    android:text="@string/cancel_button_text"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_background_disabled"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" />

                <Button
                    style="@style/ShadowText"
                    android:id="@+id/btn_registration_next1"
                    android:text="@string/registration_next1"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_background_states"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>